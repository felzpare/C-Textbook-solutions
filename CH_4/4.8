#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;

int main()
{
	int num1, num2, correct, answer;
	const int MIN_VALUE=10, 
			  MAX_VALUE=50;
	unsigned seed;
	
	seed = time(0);
	srand(seed);
	
	num1 = (rand() % (MAX_VALUE - MIN_VALUE +1) + MIN_VALUE);
	num2 = (rand() % (MAX_VALUE - MIN_VALUE +1) + MIN_VALUE);
	correct = num1 + num2;
	
	cout << "  " << num1 << endl;
	cout << "+" << " " << num2 << endl;
	cout << " " << " --" << endl;
	
	cout << "Please enter the answer" << endl;
	cin >> answer;
	if (answer < 0 || answer > 100)
	{
		cout << "That is not a valid entry";
		return 0;
	}
	
	
	
	
	
	if (answer == correct)
	{
		cout << "Congratulations the answer is correct";
	}
	else
	{
		cout << "That answer is incorrect. The correct answer was " << correct << endl;
	}
	
	
	
	
	return 0;
	
	
	
}
